---
title: Writing 
layout: default
---

%section.site-section.introduction 
	.grid-container
		.g-s-8.offset-2
			%h1.x-large {{page.title}}

%main
	%section.site-section
		
	
		.article-list
			.grid-container
				.g-s-2		
					%h2.small.sidecar Recent posts
				.g-s-8
					%ol
						
						== {% for post in site.posts %}
						%li
							%article
								%a{:title => :"{{ post.title }}", :href=> :"{{ post.url }}"}
									%h1.medium  {{ post.headline }}
									%p.meta.x-small   
										%span {{post.date | date: "%d %B, %Y"}}	
										%span {{post.tags[0] | prepend: "#"}}
										%span {{ post.content | number_of_words | append: " words" }}
										
						== {% endfor %}
